}
\setbeamerfont{section in toc shaded}{size=\large,series=\bfseries}
\setbeamercolor{section in toc shaded}{fg=mymain4}
\newcommand{\toc}[1][]{%
  \ifthenelse{\equal {#1} {}}%
  {%
    \tableofcontents%
  }%
  {%
    \tableofcontents[#1]%
  }%
}

\setbeamercolor{item}{fg=mymain1}
\setbeamercolor{subitem}{fg=mymain1}
\setbeamercolor{subsubitem}{fg=mymain1}
\setbeamertemplate{itemize item}{%
  \ifbeamer@draftmode%
    $\blacksquare$%
  \else%
    \tikz[baseline=-0.6ex, rounded corners=0.25ex] \fill (-0.45ex, -0.45ex) rectangle (0.45ex, 0.45ex);%
  \fi%
}
\setbeamertemplate{itemize subitem}{%
